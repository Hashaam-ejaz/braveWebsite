{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Next.js: Debug",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "args": ["dev"],
            "cwd": "${workspaceFolder}",
            "outFiles": ["${workspaceFolder}/.next/**/*.js"],
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
            "runtimeArgs": ["--inspect"],
            "console": "integratedTerminal"
        }
    ]
}
